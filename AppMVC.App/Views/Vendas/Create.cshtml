@model AppMVC.App.ViewModels.VendaViewModel

@{
    ViewData["Title"] = "Inserir Venda";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DataVenda" class="control-label"></label>
                <input type="datetime" asp-for="DataVenda" class="form-control" readonly value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))">
                    <option>Selecione um Cliente...</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="TipoVenda" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="TipoVenda" checked /> À Vista
                <input type="radio" value="2" asp-for="TipoVenda" /> Parcelado
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="VendaTarget" data-modal="" asp-action="AdicionarProduto" class="btn btn-success">Adicionar Produto</a>
                <input type="submit" value="Finalizar Venda" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div>
        <h4 class="table-dark" style="padding:10px">Endereço de Entrega</h4>
        <partial name="_EnderecoEntrega" />
    </div>

    <hr />
    
</form>


<div id="myModal2" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent2"></div>
        </div>
    </div>
</div>













<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            AjaxModal2();
        });
    </script>

}